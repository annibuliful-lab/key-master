datasource db {
    provider = "mongodb"
    url      = env("MONGODB_URL")
}

generator client {
    provider = "prisma-client-js"
    output   = "../node_modules/@prisma/client-mongo"
}

enum AuditType {
    CREATE
    UPDATE
    DELETE
}

enum AuditLogStatus {
    ERROR
    WARN
    SUCCESS
    INFO
}

model Message {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    content   String
    auditId   String
    audit     AuditLog @relation(fields: [auditId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

}

model AuditLog {
    id          String         @id @default(auto()) @map("_id") @db.ObjectId
    projectId   String
    serviceName String
    type        AuditType
    status      AuditLogStatus
    data        Json?
    createdBy   String
    updatedBy   String
    messages    Message[]
    createdAt   DateTime       @default(now())
    updatedAt   DateTime       @default(now()) @updatedAt

    @@index([projectId])
    @@index([serviceName, type])
}
